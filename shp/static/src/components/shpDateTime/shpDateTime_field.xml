<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="shp.SHPDateTimeField">
        <t t-if="props.readonly">
            <div class="d-grid">
                <a class="o_form_uri o_text_overflow" t-on-click.stop="" t-att-href="props.record.data[props.name] ? 'mailto:'+props.record.data[props.name] : undefined" t-esc="props.record.data[props.name] || ''"/>
            </div>
        </t>
        <t t-else="">
            <t t-if="props.hasTime=='true'">
                <div class="d-inline-flex w-100">
                    <input
                        data-jdp=""
                        class="o_input"
                        t-att-id="props.id"
                        type="text"
                        autocomplete="off"
                        t-att-placeholder="props.placeholder"
                        t-att-required="props.required"
                        t-ref="input"
                        t-on-blur="(e)=>this.onBlur(e)"
                        t-on-input="onInput"
                    />
                </div>
            </t>
            <t t-else="">
                <div class="d-inline-flex w-100">
                    <input
                        class="o_input"
                        t-att-id="props.id"
                        type="text"
                        autocomplete="off"
                        t-att-placeholder="props.placeholder"
                        t-att-required="props.required"
                        t-ref="input"
                        data-jdp=""
                        data-jdp-only-date=""
                        t-on-blur="(e)=>this.onBlur(e)"
                        t-on-input="onInput"
                    />
                </div>
            </t>
        </t>
    </t>

</templates>
